# yaml 配置
version: 3.6
services:
  run_keytool:
    image: {{carrier_image[0]["name"]}}:{{carrier_image[0]["tag"]}}
    volumes:
      - {{ deploy_dir }}/carrier_test:{{ carrier_docker_path }}
    command: /Carrier/keytool genkeypair | awk 'NR==1{print $2}' |xargs echo -n > {{ carrier_docker_path }}/p2p_priv_key/p2p_priv_key))|cat
  run_carrier:
    image: {{carrier_image[0]["name"]}}:{{carrier_image[0]["tag"]}}
    container_name: {{carrier_image[0]["service"]}}
    restart: always
    network_mode: host
    volumes:
      - {{ deploy_dir }}/carrier_test:{{ carrier_docker_path }}
    command: {{ carrier_docker_path }}/carrier --config-file {{ carrier_docker_path }}/config/carrier.yml
